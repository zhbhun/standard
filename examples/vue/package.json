{
  "private": true,
  "name": "@zhbhun/examples-vue",
  "version": "1.0.0",
  "scripts": {
    "lint:js": "eslint --ext .js,.vue ./src",
    "lint:css": "stylelint --allow-empty-input \"./**/*.(css|less|scss|vue)\"",
    "lint": "npm run lint:js && npm run lint:css",
    "format:js": "eslint --fix --ext .js,.vue ./src",
    "format:css": "stylelint --fix --allow-empty-input \"./**/*.(css|less|scss|vue)\"",
    "format": "npm run format:js && npm run format:css",
    "pre-commit": "echo ignore"
  },
  "devDependencies": {
    "@zhbhun/eslint-config-base": "^1.0.0",
    "@zhbhun/prettier-config": "^1.0.0",
    "@zhbhun/stylelint-config": "^1.0.0",
    "@zhbhun/commitlint-config": "^1.0.0",
    "@vue/cli-plugin-babel": "^4.4.0",
    "eslint": "^8.0.0",
    "stylelint": "^14.0.0"
  }
}
